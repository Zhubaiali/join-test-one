<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yizhi.student.dao.StudentInfoDao">
    <!-- 查询单个学生信息 -->
    <select id="get" resultType="StudentInfoDO">
        SELECT *
        FROM student_info
        WHERE id = #{id}
    </select>
    <!-- 查询多个学生信息 -->
    <select id="list" resultType="StudentInfoDO">
        SELECT * FROM student_info
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="name != null">
                AND name = #{name}
            </if>
            <!-- 其他查询条件 -->
        </where>
    </select>
    <!-- 统计学生数量 -->
    <select id="count" resultType="int">
        SELECT COUNT(*) FROM student_info
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="name != null">
                AND name = #{name}
            </if>
            <!-- 其他查询条件 -->
        </where>
    </select>
    <!-- 保存学生信息 -->
    <insert id="save" useGeneratedKeys="true" keyProperty="id" parameterType="StudentInfoDO">
        INSERT INTO student_info (name, gender, age, address)
        VALUES (#{name}, #{gender}, #{age}, #{address})
    </insert>

    <!-- 更新学生信息 -->
    <update id="update" parameterType="StudentInfoDO">
        UPDATE student_info
        SET name    = #{name},
            gender  = #{gender},
            age     = #{age},
            address = #{address}
        WHERE id = #{id}
    </update>

    <!-- 删除单个学生信息 -->
    <delete id="remove">
        DELETE
        FROM student_info
        WHERE id = #{id}
    </delete>

    <!-- 批量删除学生信息 -->
    <delete id="batchRemove">
        DELETE FROM student_info WHERE id IN
        <foreach item="id" index="index" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>